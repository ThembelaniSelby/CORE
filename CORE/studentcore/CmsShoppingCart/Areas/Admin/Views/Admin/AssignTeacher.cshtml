@model CmsShoppingCart.Models.Data.SubTVM

@{
    ViewBag.Title = "Assign " + Model.SubjectName.ToString() +" Teacher";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>ASSIGN @Model.SubjectName.ToString() TEACHER</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            <label class="control-label col-md-2" for="HasSidebar">Teachers</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TeacherId, Model.Teachers, "Select Teacher", new { @class = "form-control" })
                @Html.ValidationMessage("Please Select a Teacher", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ASSIGN TEACHER" class="btn btn-default" />
            </div>
        </div>
    </div>
}

