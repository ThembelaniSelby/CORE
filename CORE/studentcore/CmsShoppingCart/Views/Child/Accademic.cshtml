@model IEnumerable<CmsShoppingCart.Models.Data.Gradesubject>

@{
    ViewBag.Title = "Accademic";
}

<h2>Accademic</h2>

<p>
    @Html.ActionLink("GRADE CALENDER", "MyTimetable",new { id = Model.ToList().Take(1).FirstOrDefault().GradeNumber },new { @class="btn btn-info"})
    @Html.ActionLink("GRADE ASSESSMENT CALENDER", "AssessmentTimetable", new { id = Model.ToList().Take(1).FirstOrDefault().GradeNumber }, new { @class = "btn btn-warning" })

</p>
<table class="table">
    <tr>
        <th>
            Subject Key
        </th>
        <th>
            Subject Name
        </th>
        <th>
           Subject Name(LOWER)
        </th>
        
        <th>
            Grade Name
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectNameFix)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.GradeName)
        </td>
       
        <td>
            <a href="/child/SubjectTimetable?gnum=@item.GradeNumber&subnamefix=@item.SubjectNameFix" class="btn btn-info">SUBJECT CALENDER</a>|
            <a href="/child/SubjectAssessmentTimetable?gnum=@item.GradeNumber&subnamefix=@item.SubjectNameFix" class="btn btn-warning">SUBJECT ASSESSMENT CALENDER</a>

        </td>
    </tr>
}

</table>
