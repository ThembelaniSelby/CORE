@model IEnumerable<CmsShoppingCart.Models.Data.Assessment>

@{
    ViewBag.Title = "Assessments";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">
        @TempData["Error"]
    </div>
}

<h2>Assessments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeightInPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssessmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DurationInHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalMarks)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeightInPercent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssessmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DurationInHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalMarks)
        </td>
        <td>
            @Html.ActionLink("Details", "Assessment", new { id=item.Id },new { @class ="btn btn-info"}) 
            @if(item.AssessmentEndDate < DateTime.UtcNow.AddHours(2))
            {
                <a href="/Teacher/GetAssessmentMarks?id=@item.Id" class="btn btn-success">ASSESSMENT MARKS</a>
            }
        </td>
    </tr>
}

</table>
